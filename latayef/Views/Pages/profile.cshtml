				e.preventDefault();
				// Get the field name
				var quantity = parseInt($('#quantity').val());

				// If is not undefined

				$('#quantity').val(quantity + 1);


				// Increment

			});

			$('.quantity-left-minus').click(function (e) {
				// Stop acting like a button
				e.preventDefault();
				// Get the field name
				var quantity = parseInt($('#quantity').val());

				// If is not undefined

				// Increment
				if (quantity > 0) {
					$('#quantity').val(quantity - 1);
				}
			});

		});


		function enableEditing() {
			// Get all input elements and enable them
			let inputs = document.querySelectorAll('input');
			inputs.forEach(input => input.disabled = false);

			// Show the save button and hide the edit button
			document.getElementById('editButton').classList.add('d-none');
			document.getElementById('saveButton').classList.remove('d-none');
		}

		function saveInformation() {
			// Here, you can add functionality to save the data, such as an AJAX call to your server

			// After saving, disable the inputs again
			let inputs = document.querySelectorAll('input');
			inputs.forEach(input => input.disabled = true);

			// Hide the save button and show the edit button again
			document.getElementById('saveButton').classList.add('d-none');
			document.getElementById('editButton').classList.remove('d-none');
		}
	
